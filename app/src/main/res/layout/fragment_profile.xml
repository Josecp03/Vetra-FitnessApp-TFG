<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".view.fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <!-- Imagen de perfil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_picture"
                app:shapeAppearanceOverlay="@style/RoundedImage" />

            <!-- Texto para cambiar la imagen -->
            <TextView
                android:id="@+id/change_picture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Change picture"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/goldman" />

            <!-- Separador horizontal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:background="@android:color/black" />

            <!-- BLOQUE DE DATOS (Name, Age, Weight, etc.) -->
            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <!-- EditText con apariencia simple -->
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:hint="Your name"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- LastName -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LastName"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/editTextLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:maxLength="40"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:hint="Your last name"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/edit_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:maxLength="3"
                    android:hint="21"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/edit_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:maxLength="5"
                    android:hint="82 kg"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/edit_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:maxLength="3"
                    android:hint="180 cm"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- Calorie Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calorie Goal"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/edit_calorie_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:maxLength="5"
                    android:hint="3000 kcal"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/goldman" />

                <EditText
                    android:id="@+id/edit_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/goldman"
                    android:hint="Male"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/black" />

            <!-- BOTONES INFERIORES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="40dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@android:color/black"
                    app:iconTint="@null"
                    app:strokeColor="@android:color/black"
                    app:strokeWidth="2dp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@android:color/holo_red_dark"
                    app:iconTint="@null"
                    app:strokeColor="@android:color/black"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
