<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_dialog"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textTitleSaveRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:includeFontPadding="false"
        android:text="@string/save_rotine"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveRotineConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/goldman"
        android:includeFontPadding="false"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="@string/save"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="16dp" />

    <TextView
        android:id="@+id/textMessageSavaRoutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/goldman"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/save_rotine_to_make_changes_later_you_ll_need_to_create_a_new_one"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>
