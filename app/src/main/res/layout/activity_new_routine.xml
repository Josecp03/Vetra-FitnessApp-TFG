<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".view.activities.training.NewRoutineActivity">

    <!-- EditText del nombre de la rutina -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarNewRoutine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/almost_black"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="4dp"
            tools:ignore="RtlSymmetry">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/goldman"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingEnd="20dp"
                android:text="@string/new_routine"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <!-- Discard -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDiscard"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/goldman"
                android:includeFontPadding="false"
                android:text="@string/discard"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/red_alert"
                app:cornerRadius="16dp"
                app:strokeColor="@color/red_alert"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteX="150dp"
                tools:layout_editor_absoluteY="4dp" />

            <!-- Save -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/goldman"
                android:includeFontPadding="false"
                android:paddingStart="16dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="16dp"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="4dp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarNewRoutine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:autofillHints=""
            android:fontFamily="@font/goldman"
            android:hint="@string/routine_name"
            android:includeFontPadding="false"
            android:inputType="text|textNoSuggestions"
            android:maxLength="35"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textColor="@color/dark_gray"
            tools:ignore="TextFields"
            android:textColorHint="@color/dark_gray"
            android:backgroundTint="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddExercise"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/goldman"
            android:includeFontPadding="false"
            android:text="@string/add_exercise"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            app:backgroundTint="@color/black"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_add_white"
            app:iconGravity="textStart"
            app:iconSize="16dp"
            app:iconPadding="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRoutineExercises"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:scrollbars="vertical"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
