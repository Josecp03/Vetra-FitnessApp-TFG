<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_dialog"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textTitleDeleteRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:includeFontPadding="false"
        android:text="@string/delete_routine"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDeleteRoutineConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/goldman"
        android:includeFontPadding="false"
        android:paddingVertical="12dp"
        android:text="@string/delete_routine"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/red_alert"
        app:cornerRadius="16dp" />

    <TextView
        android:id="@+id/textMessageDeleteRoutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/goldman"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/once_deleted_this_routine_cannot_be_recovered"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>
