<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Imagen placeholder -->
        <View
            android:id="@+id/ivPlaceholder"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/placeholder_circle_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Línea de título placeholder -->
        <View
            android:id="@+id/tvPlaceholderTitle"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/placeholder_bg"
            app:layout_constraintStart_toEndOf="@id/ivPlaceholder"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Línea de subtítulo placeholder -->
        <View
            android:id="@+id/tvPlaceholderSubtitle"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/placeholder_bg"
            app:layout_constraintStart_toEndOf="@id/ivPlaceholder"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceholderTitle" />

        <!-- Botón placeholder -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
