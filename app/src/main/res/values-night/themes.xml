<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VetraFitnessAppTFG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores de tu marca -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/almost_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- muy importante para que las barras del sistema se pinten según sus colores -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- status y nav bar en negro -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/almost_black</item>

        <!-- tu fondo de ventana -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundedFull" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <!-- Usamos nuestros drawables personalizados -->
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
        <item name="android:track">@drawable/switch_track_custom</item>
        <!-- Muy importante para que no aplique ningún MaterialTheme tint -->
        <item name="useMaterialThemeColors">false</item>
    </style>

</resources>